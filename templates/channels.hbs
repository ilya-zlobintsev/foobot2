{{#*inline "page"}}

<style>
    table {
        width: 70%;
    }

    h1 {
        text-align: center;
    }

    td {
        padding: 8px;
    }
</style>

<section>
    <h1>Channel list</h1>
    <div style="overflow-x:auto">
        <table border=1>
            <col style="width:5%">
            <col style="width:20%">
            <col style="width:50%">
            <col style="width:25%">
            <thead>
                <th>ID</th>
                <th>Platform</th>
                <th>Name/Channel ID</th>
                <th>Command list</th>
            </thead>
            <tbody>
                {{#each channels}}
                <tr>
                    <td>{{ this.id }}</td>
                    <td>{{ this.platform }}</td>
                    <td>{{ this.channel }}</td>
                    <td> <a href="/channels/{{ this.id }}/commands">Here</a> </td>
                </tr>
                {{/each}}
            </tbody>

        </table>
    </div>
</section>

{{/inline}}
{{~>(parent_context.name)~}}