{{#*inline "page"}}

<style>
    section {
        text-align: center;
    }

    table {
        width: 80%;
        margin-left: auto;
        margin-right: auto;

        border: none;
        border-collapse: collapse;

        font-family: sans-serif;
    }

    .title {
        display: inline-flex;
    }

    td,
    th {
        padding: 10px;
    }

    td {
        border-color: #363452
    }

    th,
    tr:nth-child(2n+2) {
        background-color: #29273f;
    }

    th {
        border: none;
    }


    .first {
        border-left: none;
    }

    .last {
        border-right: none;
    }
</style>

<section>
    <div class="title">
        <h1>Command list for channel {{ channel }}</h1>
        <button id="add_command_button" type="button" disabled="true">Add command</button>
    </div>
    <table border=1>
        <col style="width:25%">
        <col style="width:50%">
        <col style="width:5%">
        <col style="width:20%">
        <thead>
            <th>Name</th>
            <th>Action</th>
            <th>CD</th>
            <th>Permissions</th>
        </thead>
        <tbody>
            {{#each commands }}
            <tr>
                <td class="first"><b>{{ this.name }}</b></td>
                <td>{{ this.action }}</td>
                <td>{{ #with this.cooldown }}{{ this }}{{else}}0{{/with}}s</td>
                <td class="last">
                    {{ #if this.permissions }}
                    {{ this.permissions }}
                    {{ else }}
                    Everyone
                    {{ /if }}
                </td>
            </tr>
            {{/each}}
        </tbody>
    </table>
    <script src="/static/js/commands.js" async></script>
</section>

{{/inline}}
{{~>(parent_context.name)~}}